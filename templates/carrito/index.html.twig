{# templates/carrito/index.html.twig #}
{% extends 'base.html.twig' %}

{% set page_css = 'carrito' %}

{% block title %}Tu Carrito - Kebab Las Ni√±as{% endblock %}

{% block body %}

    <div class="container cart-container">

        <h1>Tu Carrito de Compra</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% if carritoData is not empty %}
            <form action="{{ path('app_carrito_finalizar') }}" method="post">
                <div class="cart-cards">
                    {% for item in carritoData %}
                        <div class="cart-card">
                            <div class="card-header">
                                <div class="card-title">
                                    <span class="plato-icon">üçΩÔ∏è</span>
                                    <span class="plato-nombre">{{ item.plato.nombre }}</span>
                                </div>
                                <a href="{{ path('app_carrito_eliminar', {'key': item.key}) }}" class="btn btn-danger btn-card">‚úñ</a>
                            </div>
                            <div class="card-body">
                                <div class="card-info">
                                    <div class="precio-unitario">
                                        <span class="label">Precio:</span>
                                        <span>{{ item.plato.precio | number_format(2, '.', ',') }} ‚Ç¨</span>
                                    </div>
                                    <div class="cantidad">
                                        <form action="{{ path('app_carrito_actualizar', {'key': item.key}) }}" method="post" class="quantity-form">
                                            <span class="label">Cantidad:</span>
                                            <input type="number" name="cantidad" value="{{ item.cantidad }}" min="1">
                                            <button type="submit" class="update-btn">Actualizar</button>
                                        </form>
                                    </div>
                                </div>
                                <div class="personalizacion">
                                    <span class="label">Personalizaci√≥n:</span>
                                    <div class="personalizacion-list">
                                        {% set categoria = item.plato.categoria.nombre|lower %}
                                        {% if categoria == 'entrantes' %}
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][salsa_blanca]" value="1"
                                                    {% if (item.personalizacion.salsa_blanca|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">ü•õ</span> Salsa blanca
                                            </label>
                                        {% elseif categoria == 'kebabs' or categoria == 'falafel' %}
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][salsa_yogurt]" value="1"
                                                    {% if (item.personalizacion.salsa_yogurt|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">ü•õ</span> Salsa yogurt
                                            </label>
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][lechuga]" value="1"
                                                    {% if (item.personalizacion.lechuga|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">ü•¨</span> Lechuga
                                            </label>
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][tomate]" value="1"
                                                    {% if (item.personalizacion.tomate|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">üçÖ</span> Tomate
                                            </label>
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][cebolla]" value="1"
                                                    {% if (item.personalizacion.cebolla|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">üßÖ</span> Cebolla
                                            </label>
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][maiz]" value="1"
                                                    {% if (item.personalizacion.maiz|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">üåΩ</span> Ma√≠z
                                            </label>
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][queso_feta]" value="1"
                                                    {% if (item.personalizacion.queso_feta|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">üßÄ</span> Queso feta
                                            </label>
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][lombarda]" value="1"
                                                    {% if (item.personalizacion.lombarda|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">ü•ó</span> Lombarda
                                            </label>
                                            <label class="perso-item">
                                                <input type="checkbox" name="personalizacion[{{ item.key }}][salsa_picante]" value="1"
                                                    {% if (item.personalizacion.salsa_picante|default(false)) %}checked{% endif %}>
                                                <span class="perso-icon">üå∂Ô∏è</span> Salsa picante
                                            </label>
                                        {% else %}
                                            <span>No disponible</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="subtotal">
                                    <span class="label">Subtotal:</span>
                                    <span class="subtotal-value">{{ (item.plato.precio * item.cantidad) | number_format(2, '.', ',') }} ‚Ç¨</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="cart-summary">
                    <div class="total-label">Total:</div>
                    <div class="total-value">{{ total | number_format(2, '.', ',') }} ‚Ç¨</div>
                </div>
                <div class="cart-actions">
                    <a href="{{ path('app_carrito_vaciar') }}" class="btn btn-warning">Vaciar Carrito</a>
                    <button type="submit" class="btn btn-success">Finalizar Pedido</button>
                </div>
            </form>
        {% else %}
            <div class="empty-cart">
                <p class="empty-cart-message">Tu carrito est√° vac√≠o.</p>
                <p class="empty-cart-message"><a href="{{ path('app_inicio') }}">Volver a la tienda</a></p>
            </div>
        {% endif %}

    </div>

{% endblock %}