{% extends 'base.html.twig' %}

{% block title %}{{ editar ? 'Editar Pedido' : 'Nuevo Pedido' }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin-panel.css') }}">
{% endblock %}

{% block body %}
<body class="admin-panel">
<div class="admin-edit-bg">
    <h1 class="admin-panel-title">{{ editar ? 'Editar Pedido' : 'Nuevo Pedido' }}</h1>
    <div class="admin-edit-form">
        {{ form_start(form) }}
            {{ form_row(form.usuarios) }}
            {{ form_row(form.direccionentrega) }}
            {{ form_row(form.total) }}
            {{ form_row(form.metodopago) }}
            {{ form_row(form.fechapedido) }}
            {{ form_row(form.estado) }}
            <button class="btn btn-primary" type="submit">Guardar</button>
        {{ form_end(form) }}
        <a href="{{ path('admin_pedidos') }}" class="btn btn-secondary" style="margin-top: 15px;">Volver al listado</a>
    </div>
</div>
</body>
{% endblock %}