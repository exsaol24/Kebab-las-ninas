{% extends 'base.html.twig' %}

{% block title %}Panel de Administrador{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin-panel.css') }}">
    <link rel="stylesheet" href="{{ asset('css/administrador.css') }}">
    <style>
        .admin-tabs { margin-bottom: 20px; }
        .admin-tab-btn {
            padding: 10px 20px;
            border: none;
            background: #eee;
            cursor: pointer;
            margin-right: 5px;
        }
        .admin-tab-btn.active { background: #ccc; }
        .admin-tab-content { display: none; }
        .admin-tab-content.active { display: block; }
        .admin-table-responsive {
            width: 100%;
        }
        .admin-table th, .admin-table td {
            font-size: 1em;
            vertical-align: middle;
        }
        .admin-table img {
            max-width: 60px;
            max-height: 60px;
        }
        .admin-table {
            table-layout: auto;
            width: 100%;
        }
        .flash-popup {
            position: fixed;
            top: 30px;
            left: 50%;
            transform: translateX(-50%);
            min-width: 300px;
            max-width: 90vw;
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
            border-radius: 8px;
            padding: 18px 40px 18px 18px;
            z-index: 9999;
            font-size: 1.1em;
            box-shadow: 0 2px 12px rgba(0,0,0,0.15);
            display: flex;
            align-items: center;
            animation: fadeInPopup 0.4s;
        }
        .flash-popup-error {
            background: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }
        .flash-popup-success {
            background: #d4edda;
            color: #155724;
            border-color: #c3e6cb;
        }
        .flash-popup-close {
            margin-left: 20px;
            font-size: 1.5em;
            cursor: pointer;
            color: inherit;
            background: none;
            border: none;
            outline: none;
        }
        @keyframes fadeInPopup {
            from { opacity: 0; top: 0; }
            to { opacity: 1; top: 30px; }
        }
    </style>
{% endblock %}

{% block body %}
<body class="admin-panel">

    {# Popup para mensajes flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div id="flash-popup" class="flash-popup flash-popup-{{ label }}">
                {{ message }}
                <span class="flash-popup-close" onclick="document.getElementById('flash-popup').style.display='none'">&times;</span>
            </div>
        {% endfor %}
    {% endfor %}

    <script>
        // Oculta automáticamente el popup después de 4 segundos
        window.addEventListener('DOMContentLoaded', function() {
            var popup = document.getElementById('flash-popup');
            if (popup) {
                setTimeout(function() {
                    popup.style.display = 'none';
                }, 4000);
            }
        });
    </script>

    <div class="admin-panel-bg">
        <h1 class="admin-panel-title">Panel de Administrador</h1>
        <div class="admin-tabs">
            <button class="admin-tab-btn active" onclick="showTab('usuarios')">Usuarios</button>
            <button class="admin-tab-btn" onclick="showTab('platos')">Platos</button>
            <button class="admin-tab-btn" onclick="showTab('pedidos')">Pedidos</button>
            <button class="admin-tab-btn" onclick="showTab('historialventas')">Historial Ventas</button>
            <button class="admin-tab-btn" onclick="showTab('estadospedidos')">Estados de Pedidos</button>
            <button class="admin-tab-btn" onclick="showTab('detallespedidos')">Detalles de Pedidos</button>
            <button class="admin-tab-btn" onclick="showTab('categorias')">Categorías</button>
        </div>

        <div id="tab-usuarios" class="admin-tab-content active">
            <p class="admin-panel-desc">Aquí puedes gestionar los usuarios.</p>
            <div class="admin-table-responsive" style="overflow-x:auto;">
                <table class="admin-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            <th>Administrador</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for usuario in usuarios %}
                        <tr>
                            <td>{{ usuario.id }}</td>
                            <td>{{ usuario.nombre }}</td>
                            <td>{{ usuario.email }}</td>
                            <td>{{ usuario.direccion }}</td>
                            <td>{{ usuario.telefono }}</td>
                            <td>
                                {% if usuario.administrador %}
                                    <span class="admin-label">Sí</span>
                                {% else %}
                                    <span class="no-admin-label">No</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('admin_usuario_editar', {'id': usuario.id}) }}" class="btn-edit">Editar</a>
                                <form action="{{ path('admin_usuario_eliminar', {'id': usuario.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar este usuario?');">
                                    <button type="submit" class="btn-delete">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="7" style="text-align:center;">No hay usuarios.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div id="tab-platos" class="admin-tab-content">
            <p class="admin-panel-desc">Aquí puedes gestionar los platos.</p>
            <a href="{{ path('admin_plato_nuevo') }}" class="btn-add" style="margin-bottom:10px;display:inline-block;">Añadir Plato</a>
            <div class="admin-table-responsive">
                <table class="admin-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Categoría</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                            <th>Ingredientes</th>
                            <th>Alergenos</th>
                            <th>Disponible</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for plato in platos %}
                        <tr>
                            <td>
                                {{ plato.categoria ? plato.categoria.nombre : '' }}
                            </td>
                            <td>{{ plato.nombre }}</td>
                            <td>{{ plato.descripcion }}</td>
                            <td>{{ plato.precio }}</td>
                            <td>
                                {% if plato.imagen %}
                                    <img src="{{ asset('uploads/platos/' ~ plato.imagen) }}" alt="Imagen" style="max-width:60px;max-height:60px;">
                                {% endif %}
                            </td>
                            <td>{{ plato.ingredientes }}</td>
                            <td>{{ plato.alergenos }}</td>
                            <td>{{ plato.disponible ? 'Sí' : 'No' }}</td>
                            <td style="min-width:120px;">
                                <a href="{{ path('admin_plato_editar', {'id': plato.id}) }}" class="btn-edit">Editar</a>
                                <form action="{{ path('admin_plato_eliminar', {'id': plato.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar este plato?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plato.id) }}">
                                    <button type="submit" class="btn-delete">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="9" style="text-align:center;">No hay platos.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div id="tab-pedidos" class="admin-tab-content">
            <p class="admin-panel-desc">Aquí puedes gestionar los pedidos.</p>
            <div class="admin-table-responsive">
                <table class="admin-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for pedido in pedidos %}
                        <tr>
                            <td>{{ pedido.id }}</td>
                            <td>{{ pedido.usuarios ? pedido.usuarios.nombre : '' }}</td>
                            <td>{{ pedido.fechapedido ? pedido.fechapedido|date('d/m/Y H:i') : '' }}</td>
                            <td>{{ pedido.total }}</td>
                            <td>{{ pedido.estado.nombre }}</td>
                            <td style="min-width:120px;">
                                <a href="{{ path('admin_pedido_editar', {'id': pedido.id}) }}" class="btn-edit">Editar</a>
                                <form action="{{ path('admin_pedido_eliminar', {'id': pedido.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar este pedido?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pedido.id) }}">
                                    <button type="submit" class="btn-delete">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" style="text-align:center;">No hay pedidos.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div id="tab-historialventas" class="admin-tab-content">
            <p class="admin-panel-desc">Aquí puedes gestionar el historial de ventas.</p>
            <div class="admin-table-responsive">
                <table class="admin-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Pedido</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for venta in historialventas %}
                        <tr>
                            <td>{{ venta.id }}</td>
                            <td>{{ venta.pedido ? venta.pedido.id : '' }}</td>
                            <td>
                                {{ venta.pedido and venta.pedido.usuarios ? venta.pedido.usuarios.nombre : '' }}
                            </td>
                            <td>{{ venta.fechaventa ? venta.fechaventa|date('d/m/Y H:i') : '' }}</td>
                            <td>{{ venta.total }}</td>
                            <td style="min-width:120px;">
                                <a href="{{ path('admin_historialventa_editar', {'id': venta.id}) }}" class="btn-edit">Editar</a>
                                <form action="{{ path('admin_historialventa_eliminar', {'id': venta.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar este registro?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ venta.id) }}">
                                    <button type="submit" class="btn-delete">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" style="text-align:center;">No hay historial de ventas.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div id="tab-estadospedidos" class="admin-tab-content">
            <p class="admin-panel-desc">Aquí puedes gestionar los estados de los pedidos.</p>
            <div class="admin-table-responsive">
                <table class="admin-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for estado in estadospedidos %}
                        <tr>
                            <td>{{ estado.id }}</td>
                            <td>{{ estado.nombre }}</td>
                            <td style="min-width:120px;">
                                <a href="{{ path('admin_estadopedido_editar', {'id': estado.id}) }}" class="btn-edit">Editar</a>
                                <form action="{{ path('admin_estadopedido_eliminar', {'id': estado.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar este estado?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ estado.id) }}">
                                    <button type="submit" class="btn-delete">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="3" style="text-align:center;">No hay estados de pedidos.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div id="tab-detallespedidos" class="admin-tab-content">
            <p class="admin-panel-desc">Aquí puedes gestionar los detalles de los pedidos.</p>
            <div class="admin-table-responsive">
                <table class="admin-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Pedido</th>
                            <th>Plato</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for detalle in detallespedidos %}
                        <tr>
                            <td>{{ detalle.id }}</td>
                            <td>{{ detalle.pedido ? detalle.pedido.id : '' }}</td>
                            <td>{{ detalle.platos ? detalle.platos.nombre : '' }}</td>
                            <td>{{ detalle.cantidad }}</td>
                            <td>{{ detalle.preciounitario }}</td>
                            <td style="min-width:120px;">
                                <a href="{{ path('admin_detallespedido_editar', {'id': detalle.id}) }}" class="btn-edit">Editar</a>
                                <form action="{{ path('admin_detallespedido_eliminar', {'id': detalle.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar este detalle?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ detalle.id) }}">
                                    <button type="submit" class="btn-delete">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="6" style="text-align:center;">No hay detalles de pedidos.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div id="tab-categorias" class="admin-tab-content">
            <p class="admin-panel-desc">Aquí puedes gestionar las categorías.</p>
            <a href="{{ path('admin_categoria_nuevo') }}" class="btn-add" style="margin-bottom:10px;display:inline-block;">Añadir Categoría</a>
            <div class="admin-table-responsive">
                <table class="admin-table" style="width:100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for categoria in categorias %}
                        <tr>
                            <td>{{ categoria.id }}</td>
                            <td>{{ categoria.nombre }}</td>
                            <td style="min-width:120px;">
                                <a href="{{ path('admin_categoria_editar', {'id': categoria.id}) }}" class="btn-edit">Editar</a>
                                <form action="{{ path('admin_categoria_eliminar', {'id': categoria.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('¿Seguro que quieres eliminar esta categoría?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoria.id) }}">
                                    <button type="submit" class="btn-delete">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr><td colspan="3" style="text-align:center;">No hay categorías.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>
        function showTab(tab) {
            document.querySelectorAll('.admin-tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.admin-tab-content').forEach(tabContent => tabContent.classList.remove('active'));
            if(tab === 'usuarios') {
                document.querySelector('.admin-tab-btn:nth-child(1)').classList.add('active');
                document.getElementById('tab-usuarios').classList.add('active');
            } else if(tab === 'platos') {
                document.querySelector('.admin-tab-btn:nth-child(2)').classList.add('active');
                document.getElementById('tab-platos').classList.add('active');
            } else if(tab === 'pedidos') {
                document.querySelector('.admin-tab-btn:nth-child(3)').classList.add('active');
                document.getElementById('tab-pedidos').classList.add('active');
            } else if(tab === 'historialventas') {
                document.querySelector('.admin-tab-btn:nth-child(4)').classList.add('active');
                document.getElementById('tab-historialventas').classList.add('active');
            } else if(tab === 'estadospedidos') {
                document.querySelector('.admin-tab-btn:nth-child(5)').classList.add('active');
                document.getElementById('tab-estadospedidos').classList.add('active');
            } else if(tab === 'detallespedidos') {
                document.querySelector('.admin-tab-btn:nth-child(6)').classList.add('active');
                document.getElementById('tab-detallespedidos').classList.add('active');
            } else if(tab === 'categorias') {
                document.querySelector('.admin-tab-btn:nth-child(7)').classList.add('active');
                document.getElementById('tab-categorias').classList.add('active');
            }
        }
    </script>
    </body>
{% endblock %}
